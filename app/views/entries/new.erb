<h1>Sign Up to Karaoke</h1>

<main class="form-wrapper" role="main">

  <% if @errors %>
    <div class="errors-wrapper">
      <span>Your entry could not be saved:</span>
      <ul class="errors">
        <% @errors.each do |error| %>
          <li class="error"><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <form method="post" action="create-new-post">
    <label for="entry[singer]">Singer name:</label>
    <input name="entry[singer]" type="text" value="<%= @entry.try(:singer) %>">

    <label for="entry[song_title]">Song title:</label>
    <input name="entry[song_title]" type="text" value="<%= @entry.try(:song_title) %>">

    <input type="submit" value="Put me on the List!" class="button">
  </form>
</main>
